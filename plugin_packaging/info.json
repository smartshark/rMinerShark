{
    "name": "rMinerSHARK",
    "author": "Benjamin Ledel",
    "version": "0.0.2",
    "plugin_type": "other",
    "linux_libraries": [
        "git",
        "gradle"
    ],
    "created_collections": [
	],
    "description": "Refactoring plugin based on rMiner",
    "requires": [
    ],
    "arguments": [
        {
            "name": "plugin_path",
            "required": true,
            "position": 1,
            "type": "install",
            "description": "path to the root folder of the plugin"
        },
        {
            "name": "plugin_path",
            "required": true,
            "position": 1,
            "type": "execute",
            "description": "path to the root folder of the plugin"
        },
        {
            "name": "db_hostname",
            "required": true,
            "position": 2,
            "type": "execute",
            "description": "hostname of the server, where the mongodb runs on"
        },
        {
            "name": "db_port",
            "required": true,
            "position": 3,
            "type": "execute",
            "description": "port on which the mongodb is listening on"
        },
        {
            "name": "db_database",
            "required": true,
            "position": 4,
            "type": "execute",
            "description": "name of the database in the mongodb"
        },
        {
            "name": "db_user",
            "required": false,
            "position": 5,
            "type": "execute",
            "description": "database user for the mongodb"
        },
        {
            "name": "db_password",
            "required": false,
            "position": 6,
            "type": "execute",
            "description": "password for the user of the mongodb"
        },
        {
            "name": "db_authentication",
            "required": false,
            "position": 7,
            "type": "execute",
            "description": "databse against which users are authenticated"
        },
        {
            "name": "ssl_enabled",
            "required": false,
            "position": 8,
            "type": "execute",
            "description": "needs to be set if database uses ssl connection"
        },
		{
            "name": "project_name",
            "required": true,
            "position": 9,
            "type": "execute",
            "description": "name of the project"
        },
        {
            "name": "tmp_folder",
            "required": true,
            "position": 10,
            "type": "execute",
            "description": "Path of the temporary folder"
        }
    ]
}
